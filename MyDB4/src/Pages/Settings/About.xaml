<UserControl x:Class="MyDB4.Pages.Settings.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <Button Content="Сохранить все" Margin="4" Command="{Binding SaveAllCommand}"/>
            <Button Content="Сделать резервые копии для всех" Margin="4" Command="{Binding BackupAllCommand}"/>
        </StackPanel>
    </Grid>
</UserControl>
